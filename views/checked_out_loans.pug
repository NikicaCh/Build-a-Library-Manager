extends layout

block content

    h1 Checked Out Books
    p
      a.button(href='new_loan') Create New Loan
    p
      | Filters 
      a(href='/loans/?page=1') All
      |  
      a(href='/loans/overdue/?page=1') Overdue
      |  
      a(href='/loans/checkedout/?page=1') Checked Out
    table
      thead
        tr
          th Book
          th Patron 
          th Loaned on
          th Return by 
          th Returned on
          th Action
      tbody
      for loan in checkedout
        tr
          td
            a(href='/books/details/' + loan.Book.id) #{loan.Book.title}
          td
            a(href='/patrons/details/' + loan.Patron.id) #{loan.Patron.first_name} #{loan.Patron.last_name}
          td #{loan.loaned_on}
          td #{loan.return_by}
          td
          td
            a.button(href='return_book/' + loan.Book.id) Return Book
    ul(class="pagination") 
                if pages > 1
                    - for (var i=1; i<pages + 1; i++)
                        if(i == page)
                            a(class="selected" href="/checkedout/?page="+i)= i
                        else
                            a(class="pagination-link" href="/checkedout/?page="+i)= i